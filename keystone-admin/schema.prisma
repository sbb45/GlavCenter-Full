datasource sqlite {
  url               = env("DATABASE_URL")
  shadowDatabaseUrl = env("SHADOW_DATABASE_URL")
  provider          = "sqlite"
}

generator client {
  provider = "prisma-client-js"
}

model User {
  id        String    @id @default(cuid())
  name      String    @default("")
  email     String    @unique @default("")
  password  String
  posts     Post[]    @relation("Post_author")
  createdAt DateTime? @default(now())
}

model Client {
  id        String    @id @default(cuid())
  name      String    @default("")
  phone     String    @unique @default("")
  question  String    @default("")
  overdue   String    @default("")
  debt      Int?
  payment   Int?
  whoOwes   String?   @default("[\"\"]")
  createdAt DateTime? @default(now())
}

model Post {
  id              String    @id @default(cuid())
  title           String    @default("")
  description     String    @default("")
  content         String    @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  image_id        String?
  image_filesize  Int?
  image_width     Int?
  image_height    Int?
  image_extension String?
  author          User?     @relation("Post_author", fields: [authorId], references: [id])
  authorId        String?   @map("author")
  createdAt       DateTime? @default(now())

  @@index([authorId])
}

model Component {
  id        String    @id @default(cuid())
  title     String    @default("")
  slug      String    @unique @default("")
  content   String?
  createdAt DateTime? @default(now())
}

model Review {
  id              String    @id @default(cuid())
  image_id        String?
  image_filesize  Int?
  image_width     Int?
  image_height    Int?
  image_extension String?
  content         String    @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  createdAt       DateTime? @default(now())
}

model Advantage {
  id        String    @id @default(cuid())
  title     String    @default("")
  content   String    @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  createdAt DateTime? @default(now())
}

model Service {
  id        String    @id @default(cuid())
  title     String    @default("")
  content   String    @default("[{\"type\":\"paragraph\",\"children\":[{\"text\":\"\"}]}]")
  createdAt DateTime? @default(now())
}

model Calculator {
  id               String    @id @default(cuid())
  title            String    @default("")
  isActive         String?   @default("inactive")
  overdueTitle     String    @default("Имеются ли просрочки?")
  debtTitle        String    @default("Сумма долга")
  paymentTitle     String    @default("Месячный платёж")
  whoOwesTitle     String    @default("Перед кем долги?")
  debtMax          Int?      @default(1000000)
  paymentMax       Int?      @default(40000)
  overdueOptions   String?   @default("[\"<1 месяца\",\">1 месяца\",\">6 месяцев\",\">1 года\",\"Плачу вовремя\"]")
  whoOwesOptions   String?   @default("[\"МФО\",\"Штрафы\",\"Налоги\",\"Банки\",\"ЖКХ\",\"Другой вариант\"]")
  submitButtonText String    @default("Расчитать стоимость")
  modalTitle       String    @default("Поздравляем!")
  modalSubtitle    String    @default("Вы сможете списать свои задолженности по закону")
  modalDescription String    @default("Наш специалист расскажет подробности по телефону")
  modalInstruction String    @default("От вас потребуется Номер телефона и Имя")
  modalSubmitText  String    @default("Отправить заявку")
  createdAt        DateTime? @default(now())
}
